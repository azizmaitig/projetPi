<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E3EDF1"
    tools:context=".Search">

    <!-- Barre horizontale contenant le texte et le logo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Texte "Home" aligné à gauche -->

        <!-- Logo aligné à droite -->

        <TextView
            android:layout_width="172dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="your Parking Map"
            android:textColor="#1C1290"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="90dp"
            android:layout_height="74dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/o" />
    </LinearLayout>

    <!-- Barre de recherche -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <Spinner
            android:id="@+id/sp_type"
            android:layout_width="307dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@android:drawable/editbox_background" />

        <Button
            android:id="@+id/bt_find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#1C1290"
            android:text="Find" />
    </LinearLayout>

    <!-- Google Map Fragment -->
    <!-- Texte "Select Your Car" -->
    <fragment
        android:id="@+id/google_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="190dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Your Car"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:textColor="#1C1290"/>

    <!-- Conteneur des voitures (Standard & High) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Standard Car -->
        <LinearLayout
            android:layout_width="23dp"
            android:layout_height="233dp"
            android:layout_weight="1"
            android:background="@drawable/blanc"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/standard_car"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="Standard Car"
                android:src="@drawable/car" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Standard Car"
                android:textColor="#1C1290"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_standard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="#5D4B8B"
                android:text="Go"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- High Car -->
        <LinearLayout
            android:layout_width="25dp"
            android:layout_height="232dp"
            android:layout_weight="1"
            android:background="@drawable/blanc"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/high_car"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/car" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="High Car"
                android:textColor="#1C1290"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="#5D4B8B"
                android:text="Go"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>



