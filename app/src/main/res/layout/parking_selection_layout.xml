<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3EDF1">

    <!-- Header with aligned elements -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="16dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/back_icon"
            android:contentDescription="Back"
            android:padding="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Page Title -->
        <TextView
            android:id="@+id/page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Parking"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#1C1290"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/back_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- App Logo -->
        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/logo_circle"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Floor Selection Dropdown (Clickable) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/floor_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#FFFFFF"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@id/header_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp">

            <TextView
                android:id="@+id/floor_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ground Floor"
                android:textSize="14sp"
                android:textColor="#000000" />

            
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Parking Layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/parking_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="64dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/floor_selector"
        app:layout_constraintBottom_toTopOf="@id/confirm_button">

        <!-- Entrance Label -->
        <TextView
            android:id="@+id/entrance_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ENTRANCE"
            android:textColor="#A7ACAE"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

        <!-- Left Parking Lane -->
        <View
            android:id="@+id/left_lane_start"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:background="#A7ACAE"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/entrance_label"
            app:layout_constraintBottom_toTopOf="@id/exit_label"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <View
            android:id="@+id/left_lane_end"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:background="#A7ACAE"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/entrance_label"
            app:layout_constraintBottom_toTopOf="@id/exit_label"
            android:layout_marginStart="80dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <!-- Right Parking Lane -->
        <View
            android:id="@+id/right_lane_start"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:background="#A7ACAE"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/entrance_label"
            app:layout_constraintBottom_toTopOf="@id/exit_label"
            android:layout_marginEnd="80dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <View
            android:id="@+id/right_lane_end"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:background="#A7ACAE"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/entrance_label"
            app:layout_constraintBottom_toTopOf="@id/exit_label"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <!-- Exit Label -->
        <TextView
            android:id="@+id/exit_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EXIT"
            android:textColor="#A7ACAE"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"/>

        <!-- Parking Spots Left (B1-B6) -->
        <LinearLayout
            android:id="@+id/left_parking_spots"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            app:layout_constraintStart_toEndOf="@id/left_lane_start"
            app:layout_constraintEnd_toStartOf="@id/left_lane_end"
            app:layout_constraintTop_toBottomOf="@id/entrance_label"
            app:layout_constraintBottom_toTopOf="@id/exit_label"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp">

            <!-- B1 Spot -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginVertical="4dp">

                <TextView
                    android:id="@+id/spot_b1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/dashed_border"
                    android:text="B1"
                    android:gravity="center"
                    android:padding="8dp" />

                <ImageView
                    android:id="@+id/car_b1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/b_row_spot_car"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </FrameLayout>

            <!-- B2 Spot -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginVertical="4dp">

                <TextView
                    android:id="@+id/spot_b2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/dashed_border"
                    android:text="B2"
                    android:gravity="center"
                    android:padding="8dp" />

                <ImageView
                    android:id="@+id/car_b2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/b_row_spot_car"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </FrameLayout>

            <!-- B3 Spot -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginVertical="4dp">

                <TextView
                    android:id="@+id/spot_b3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/dashed_border"
                    android:text="B3"
                    android:gravity="center"
                    android:padding="8dp" />

                <ImageView
                    android:id="@+id/car_b3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/b_row_spot_car"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </FrameLayout>

            <!-- B4 Spot -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginVertical="4dp">

                <TextView
                    android:id="@+id/spot_b4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/dashed_border"
                    android:text="B4"
                    android:gravity="center"
                    android:padding="8dp" />

                <ImageView
                    android:id="@+id/car_b4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/b_row_spot_car"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </FrameLayout>

            <!-- B5 Spot -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginVertical="4dp">

                <TextView
                    android:id="@+id/spot_b5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/dashed_border"
                    android:text="B5"
                    android:gravity="center"
                    android:padding="8dp" />

                <ImageView
                    android:id="@+id/car_b5"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/b_row_spot_car"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </FrameLayout>

            <!-- B6 Spot -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginVertical="4dp">

                <TextView
                    android:id="@+id/spot_b6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/dashed_border"
                    android:text="B6"
                    android:gravity="center"
                    android:padding="8dp" />

                <ImageView
                    android:id="@+id/car_b6"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/b_row_spot_car"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </FrameLayout>
        </LinearLayout>

        <!-- Middle area with arrows -->
        <LinearLayout
            android:id="@+id/middle_area"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@id/left_lane_end"
            app:layout_constraintEnd_toStartOf="@id/right_lane_start"
            app:layout_constraintTop_toBottomOf="@id/entrance_label"
            app:layout_constraintBottom_toTopOf="@id/exit_label">

            <!-- Yellow Arrows (Images) -->
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/yellow_arrow"
                android:layout_margin="8dp"/>

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/yellow_arrow"
                android:layout_margin="8dp"/>

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/yellow_arrow"
                android:layout_margin="8dp"/>

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/yellow_arrow"
                android:layout_margin="8dp"/>
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/yellow_arrow"
                android:layout_margin="8dp"/>
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/yellow_arrow"
                android:layout_margin="8dp"/>
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/yellow_arrow"
                android:layout_margin="8dp"/>
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/yellow_arrow"
                android:layout_margin="8dp"/>

        </LinearLayout>

        <!-- Parking Spots Right (A1-A6) -->
        <LinearLayout
            android:id="@+id/right_parking_spots"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            app:layout_constraintStart_toEndOf="@id/right_lane_start"
            app:layout_constraintEnd_toStartOf="@id/right_lane_end"
            app:layout_constraintTop_toBottomOf="@id/entrance_label"
            app:layout_constraintBottom_toTopOf="@id/exit_label"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp">

            <!-- A1 Spot -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginVertical="4dp">

                <TextView
                    android:id="@+id/spot_a1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/dashed_border"
                    android:text="A1"
                    android:gravity="center"
                    android:padding="8dp" />

                <ImageView
                    android:id="@+id/car_a1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/a_row_spot_car"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </FrameLayout>

            <!-- A2 Spot -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginVertical="4dp">

                <TextView
                    android:id="@+id/spot_a2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/dashed_border"
                    android:text="A2"
                    android:gravity="center"
                    android:padding="8dp" />

                <ImageView
                    android:id="@+id/car_a2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/a_row_spot_car"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </FrameLayout>

            <!-- A3 Spot -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginVertical="4dp">

                <TextView
                    android:id="@+id/spot_a3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/dashed_border"
                    android:text="A3"
                    android:gravity="center"
                    android:padding="8dp" />

                <ImageView
                    android:id="@+id/car_a3"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/a_row_spot_car"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </FrameLayout>

            <!-- A4 Spot -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginVertical="4dp">

                <TextView
                    android:id="@+id/spot_a4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/dashed_border"
                    android:text="A4"
                    android:gravity="center"
                    android:padding="8dp" />

                <ImageView
                    android:id="@+id/car_a4"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/a_row_spot_car"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </FrameLayout>

            <!-- A5 Spot -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginVertical="4dp">

                <TextView
                    android:id="@+id/spot_a5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/dashed_border"
                    android:text="A5"
                    android:gravity="center"
                    android:padding="8dp" />

                <ImageView
                    android:id="@+id/car_a5"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/a_row_spot_car"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </FrameLayout>

            <!-- A6 Spot -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginVertical="4dp">

                <TextView
                    android:id="@+id/spot_a6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/dashed_border"
                    android:text="A6"
                    android:gravity="center"
                    android:padding="8dp" />

                <ImageView
                    android:id="@+id/car_a6"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/a_row_spot_car"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </FrameLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Confirm Button -->
    <Button
        android:id="@+id/confirm_button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:backgroundTint="#5D5990"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>